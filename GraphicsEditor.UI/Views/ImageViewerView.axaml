<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:GraphicsEditor.UI.ViewModels"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="GraphicsEditor.UI.Views.ImageViewerView"
             x:DataType="vm:ImageViewerViewModel">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="LightGray" Padding="10" BorderBrush="Gray" BorderThickness="0,0,0,1" Name="Toolbar">
            <WrapPanel>
                <Button Name="LoadImageButton" Content="Load Image" Margin="5" Padding="10,5" Click="LoadImageButton_Click"/>
                <Button Name="SaveImageButton" Content="Save as JPEG" Margin="5" Padding="10,5" Click="SaveImageButton_Click" IsEnabled="{Binding IsImageLoaded}"/>
                <Separator Width="20"/>
                <Button Content="Zoom In" Margin="5" Command="{Binding ZoomInCommand}" IsEnabled="{Binding IsImageLoaded}"/>
                <Button Content="Zoom Out" Margin="5" Command="{Binding ZoomOutCommand}" IsEnabled="{Binding IsImageLoaded}"/>
                <Button Content="Reset Zoom" Margin="5" Command="{Binding ResetZoomCommand}" IsEnabled="{Binding IsImageLoaded}"/>
                <Separator Width="20" IsVisible="{Binding IsImageLoaded}"/>
                <TextBlock Text="Zoom:" VerticalAlignment="Center" Margin="5,0" IsVisible="{Binding IsImageLoaded}"/>
                <NumericUpDown Width="100" 
                               Minimum="0.1" 
                               Maximum="500" 
                               Value="{Binding ZoomLevel}"
                               Increment="1"
                               FormatString="F1"
                               ClipValueToMinMax="True"
                               AllowSpin="True"
                               ShowButtonSpinner="True"
                               VerticalAlignment="Center"
                               IsVisible="{Binding IsImageLoaded}"/>
                <TextBlock Text="x" VerticalAlignment="Center" Margin="2,0,5,0" IsVisible="{Binding IsImageLoaded}"/>
                <TextBlock Text="(0.1x - 500x)" VerticalAlignment="Center" Margin="0,0,5,0" FontSize="11" Foreground="Gray" IsVisible="{Binding IsImageLoaded}"/>
                <Separator Width="20" IsVisible="{Binding IsImageLoaded}"/>
                <CheckBox Name="ShowRgbValuesCheckBox" Content="Show RGB Values" Margin="5" VerticalAlignment="Center" 
                          IsChecked="True" ToolTip.Tip="Display R,G,B values on each pixel when pixels are at least 30px on screen (auto-adjusts with zoom)"
                          Click="ShowRgbValuesCheckBox_Click"
                          IsVisible="{Binding IsImageLoaded}"/>
                <Separator Width="20" IsVisible="{Binding IsImageLoaded}"/>
                <TextBlock Text="JPEG Quality (Live Preview):" VerticalAlignment="Center" Margin="10,0" FontWeight="SemiBold" IsVisible="{Binding IsImageLoaded}"/>
                <Slider Width="150" Minimum="1" Maximum="100" Value="{Binding JpegQuality}" 
                        TickFrequency="1" IsSnapToTickEnabled="True" VerticalAlignment="Center"
                        ToolTip.Tip="Adjust to see compression artifacts in real-time. Original shown at 100%."
                        IsVisible="{Binding IsImageLoaded}"/>
                <TextBlock Text="{Binding JpegQuality}" VerticalAlignment="Center" Margin="5,0" Width="30" IsVisible="{Binding IsImageLoaded}"/>
                <TextBlock Text="%" VerticalAlignment="Center" IsVisible="{Binding IsImageLoaded}"/>
            </WrapPanel>
        </Border>

        <!-- Image Display Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Processing Tools -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="10" Spacing="10">
                    <TextBlock Text="Image Processing" FontSize="16" FontWeight="Bold"/>
                    
                    <!-- Point Transformations -->
                    <Expander Header="Point Transformations" IsExpanded="True">
                        <StackPanel Spacing="8" Margin="5">
                            <!-- Add -->
                            <TextBlock Text="Add Value:" FontWeight="SemiBold"/>
                            <Grid ColumnDefinitions="*,Auto">
                                <NumericUpDown Grid.Column="0" Value="{Binding AddValue}" Minimum="-255" Maximum="255" Increment="1"
                                              IsEnabled="{Binding IsImageLoaded}"/>
                                <Button Grid.Column="1" Content="Apply" Command="{Binding ApplyAddCommand}" 
                                        IsEnabled="{Binding IsImageLoaded}" Margin="5,0,0,0"/>
                            </Grid>
                            <TextBlock Text="0 = no change" FontSize="10" Foreground="Gray"/>
                            
                            <!-- Subtract -->
                            <TextBlock Text="Subtract Value:" FontWeight="SemiBold" Margin="0,5,0,0"/>
                            <Grid ColumnDefinitions="*,Auto">
                                <NumericUpDown Grid.Column="0" Value="{Binding SubtractValue}" Minimum="-255" Maximum="255" Increment="1"
                                              IsEnabled="{Binding IsImageLoaded}"/>
                                <Button Grid.Column="1" Content="Apply" Command="{Binding ApplySubtractCommand}" 
                                        IsEnabled="{Binding IsImageLoaded}" Margin="5,0,0,0"/>
                            </Grid>
                            <TextBlock Text="0 = no change" FontSize="10" Foreground="Gray"/>
                            
                            <!-- Multiply -->
                            <TextBlock Text="Multiply Value:" FontWeight="SemiBold" Margin="0,5,0,0"/>
                            <Grid ColumnDefinitions="*,Auto">
                                <NumericUpDown Grid.Column="0" Value="{Binding MultiplyValue}" Minimum="0.1" Maximum="10" Increment="0.1" FormatString="F2"
                                              IsEnabled="{Binding IsImageLoaded}"/>
                                <Button Grid.Column="1" Content="Apply" Command="{Binding ApplyMultiplyCommand}" 
                                        IsEnabled="{Binding IsImageLoaded}" Margin="5,0,0,0"/>
                            </Grid>
                            <TextBlock Text="1.0 = no change" FontSize="10" Foreground="Gray"/>
                            
                            <!-- Divide -->
                            <TextBlock Text="Divide Value:" FontWeight="SemiBold" Margin="0,5,0,0"/>
                            <Grid ColumnDefinitions="*,Auto">
                                <NumericUpDown Grid.Column="0" Value="{Binding DivideValue}" Minimum="0.1" Maximum="10" Increment="0.1" FormatString="F2"
                                              IsEnabled="{Binding IsImageLoaded}"/>
                                <Button Grid.Column="1" Content="Apply" Command="{Binding ApplyDivideCommand}" 
                                        IsEnabled="{Binding IsImageLoaded}" Margin="5,0,0,0"/>
                            </Grid>
                            <TextBlock Text="1.0 = no change" FontSize="10" Foreground="Gray"/>
                            
                            <!-- Brightness -->
                            <TextBlock Text="Brightness Level:" FontWeight="SemiBold" Margin="0,5,0,0"/>
                            <Slider Value="{Binding BrightnessLevel}" Minimum="-255" Maximum="255" 
                                   TickFrequency="1" IsSnapToTickEnabled="True"
                                   IsEnabled="{Binding IsImageLoaded}"/>
                            <TextBlock HorizontalAlignment="Center">
                                <Run Text="{Binding BrightnessLevel}"/>
                                <Run Text=" (0 = no change)" FontSize="10" Foreground="Gray"/>
                            </TextBlock>
                            <Button Content="Apply Brightness" Command="{Binding ApplyBrightnessCommand}" 
                                    IsEnabled="{Binding IsImageLoaded}" HorizontalAlignment="Stretch"/>
                            
                            <!-- Grayscale -->
                            <Separator Margin="0,10"/>
                            <TextBlock Text="Grayscale:" FontWeight="SemiBold"/>
                            <Button Content="Average Method" Command="{Binding ApplyGrayscaleAverageCommand}" 
                                    IsEnabled="{Binding IsImageLoaded}" HorizontalAlignment="Stretch"/>
                            <Button Content="Luminosity Method" Command="{Binding ApplyGrayscaleLuminosityCommand}" 
                                    IsEnabled="{Binding IsImageLoaded}" HorizontalAlignment="Stretch" Margin="0,2,0,0"/>
                        </StackPanel>
                    </Expander>

                    <!-- Filters -->
                    <Expander Header="Image Filters" IsExpanded="False">
                        <StackPanel Spacing="8" Margin="5">
                            <!-- Smoothing -->
                            <TextBlock Text="Smoothing Filter:" FontWeight="SemiBold"/>
                            <Grid ColumnDefinitions="*,Auto">
                                <NumericUpDown Grid.Column="0" Value="{Binding SmoothingKernelSize}" Minimum="3" Maximum="15" Increment="2"
                                              IsEnabled="{Binding IsImageLoaded}"/>
                                <Button Grid.Column="1" Content="Apply" Command="{Binding ApplySmoothingFilterCommand}" 
                                        IsEnabled="{Binding IsImageLoaded}" Margin="5,0,0,0"/>
                            </Grid>
                            
                            <!-- Median -->
                            <TextBlock Text="Median Filter:" FontWeight="SemiBold" Margin="0,5,0,0"/>
                            <Grid ColumnDefinitions="*,Auto">
                                <NumericUpDown Grid.Column="0" Value="{Binding MedianKernelSize}" Minimum="3" Maximum="15" Increment="2"
                                              IsEnabled="{Binding IsImageLoaded}"/>
                                <Button Grid.Column="1" Content="Apply" Command="{Binding ApplyMedianFilterCommand}" 
                                        IsEnabled="{Binding IsImageLoaded}" Margin="5,0,0,0"/>
                            </Grid>
                            
                            <!-- Sobel -->
                            <TextBlock Text="Edge Detection:" FontWeight="SemiBold" Margin="0,5,0,0"/>
                            <Button Content="Sobel Filter" Command="{Binding ApplySobelFilterCommand}" 
                                    IsEnabled="{Binding IsImageLoaded}" HorizontalAlignment="Stretch"/>
                            
                            <!-- Sharpening -->
                            <TextBlock Text="Sharpening:" FontWeight="SemiBold" Margin="0,5,0,0"/>
                            <Button Content="Sharpen" Command="{Binding ApplySharpeningFilterCommand}" 
                                    IsEnabled="{Binding IsImageLoaded}" HorizontalAlignment="Stretch"/>
                            
                            <!-- Gaussian Blur -->
                            <TextBlock Text="Gaussian Blur:" FontWeight="SemiBold" Margin="0,5,0,0"/>
                            <Grid ColumnDefinitions="*,Auto">
                                <NumericUpDown Grid.Column="0" Value="{Binding GaussianSigma}" Minimum="0.1" Maximum="5.0" Increment="0.1" FormatString="F1"
                                              IsEnabled="{Binding IsImageLoaded}"/>
                                <Button Grid.Column="1" Content="Apply" Command="{Binding ApplyGaussianBlurCommand}" 
                                        IsEnabled="{Binding IsImageLoaded}" Margin="5,0,0,0"/>
                            </Grid>
                            
                            <!-- Custom Kernel -->
                            <TextBlock Text="Custom Kernel:" FontWeight="SemiBold" Margin="0,5,0,0"/>
                            <TextBox Text="{Binding CustomKernelInput}" AcceptsReturn="True" 
                                     Height="80" TextWrapping="Wrap" FontFamily="Consolas" FontSize="11"
                                     IsEnabled="{Binding IsImageLoaded}"/>
                            <Button Content="Apply Custom Kernel" Command="{Binding ApplyCustomKernelCommand}" 
                                    IsEnabled="{Binding IsImageLoaded}" HorizontalAlignment="Stretch"/>
                            <TextBlock Text="Format: comma-separated values, rows on new lines" 
                                       FontSize="10" Foreground="Gray" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Expander>
                    
                    <!-- Undo and Reset Buttons -->
                    <Button Content="↶ Cofnij ostatni filtr" Command="{Binding UndoLastFilterCommand}" 
                            IsEnabled="{Binding CanUndo}" HorizontalAlignment="Stretch" 
                            Background="LightBlue" FontWeight="Bold" FontSize="14" Padding="10"/>
                    
                    <Button Content="⟲ Reset to Original" Command="{Binding ResetToOriginalCommand}" 
                            IsEnabled="{Binding IsImageLoaded}" HorizontalAlignment="Stretch" 
                            Background="LightCoral" FontWeight="Bold" FontSize="14" Padding="10"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Image Viewer -->
            <Border Grid.Column="1" Background="DarkGray" Margin="5">
                <ScrollViewer Name="ImageScrollViewer" 
                              HorizontalScrollBarVisibility="Auto" 
                              VerticalScrollBarVisibility="Auto">
                    <Border Name="CanvasContainer">
                        <Canvas Name="ImageCanvas" 
                                Background="White" 
                                PointerPressed="ImageCanvas_OnPointerPressed"
                                PointerMoved="ImageCanvas_OnPointerMoved"
                                PointerReleased="ImageCanvas_OnPointerReleased"
                                PointerWheelChanged="ImageCanvas_OnPointerWheelChanged">
                            <Canvas.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1" />
                            </Canvas.RenderTransform>
                            <TextBlock Canvas.Left="300" Canvas.Top="280"
                                       Name="PlaceholderText"
                                       Text="Load an image to display" 
                                       FontSize="16"
                                       Foreground="Gray"/>
                        </Canvas>
                    </Border>
                </ScrollViewer>
            </Border>

            <!-- Right Panel - Info Panel -->
            <StackPanel Grid.Column="2" Margin="10" Spacing="10">
                <TextBlock Text="Image Information" FontSize="16" FontWeight="Bold"/>
                
                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="4">
                    <DockPanel>
                        <TextBlock DockPanel.Dock="Top" Text="Image Details" FontWeight="Bold" Margin="8,4" Background="#F0F0F0"/>
                        <StackPanel Spacing="5" Margin="8">
                            <TextBlock>
                                <Run Text="Width: "/>
                                <Run Text="{Binding ImageWidth}"/>
                                <Run Text=" px"/>
                            </TextBlock>
                            <TextBlock>
                                <Run Text="Height: "/>
                                <Run Text="{Binding ImageHeight}"/>
                                <Run Text=" px"/>
                            </TextBlock>
                            <TextBlock>
                                <Run Text="Zoom: "/>
                                <Run Text="{Binding ZoomLevel, StringFormat={}{0:F2}}"/>
                                <Run Text="x"/>
                            </TextBlock>
                        </StackPanel>
                    </DockPanel>
                </Border>

                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="4">
                    <DockPanel>
                        <TextBlock DockPanel.Dock="Top" Text="Pixel Inspector" FontWeight="Bold" Margin="8,4" Background="#F0F0F0"/>
                        <StackPanel Spacing="5" Margin="8">
                            <TextBlock Text="{Binding PixelInfo}" TextWrapping="Wrap"/>
                            <Border Height="60" BorderBrush="Black" BorderThickness="1" Margin="0,5,0,0">
                                <Border.Background>
                                    <SolidColorBrush Color="Transparent"/>
                                    <!-- Will show selected pixel color -->
                                </Border.Background>
                            </Border>
                        </StackPanel>
                    </DockPanel>
                </Border>

                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="4">
                    <DockPanel>
                        <TextBlock DockPanel.Dock="Top" Text="Instructions" FontWeight="Bold" Margin="8,4" Background="#F0F0F0"/>
                        <StackPanel Spacing="3" Margin="8">
                            <TextBlock Text="• Click Load Image to open a file" TextWrapping="Wrap"/>
                            <TextBlock Text="• Use zoom buttons or mouse wheel" TextWrapping="Wrap"/>
                            <TextBlock Text="• Click on image to inspect pixel" TextWrapping="Wrap"/>
                            <TextBlock Text="• Drag to pan when zoomed" TextWrapping="Wrap"/>
                            <TextBlock Text="• Adjust quality before saving JPEG" TextWrapping="Wrap"/>
                        </StackPanel>
                    </DockPanel>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="LightGray" Padding="10" BorderBrush="Gray" BorderThickness="0,1,0,0">
            <DockPanel>
                <Button DockPanel.Dock="Right" Content="Copy Error" Margin="10,0,0,0" Padding="8,4" 
                        IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                        Click="CopyError_Click"
                        ToolTip.Tip="Copy error message to clipboard"/>
                <TextBlock Text="{Binding ErrorMessage, TargetNullValue={Binding StatusMessage}}" TextWrapping="Wrap" VerticalAlignment="Center"/>
            </DockPanel>
        </Border>
    </Grid>

</UserControl>
